<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_18dp</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="android:background">@android:color/white</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="Toolbar.TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorHungryBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Bottom Navigation View-->
    <style name="BottomNavigationViewTextActive">
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/colorHungryRed</item>
    </style>

    <style name="BottomNavigationViewTextInactive">
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/colorHungryBlack</item>
    </style>

    <!-- Full Screen Dialog Theme -->
    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="PreviewContentText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorDeskBrown</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:background">@color/colorTagBackground</item>
    </style>

    <!-- board detail -->
    <style name="BoardDetailItemTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">@dimen/space_small_margin</item>
        <item name="android:paddingBottom">@dimen/space_small_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorFilterSubTitle</item>
    </style>

    <style name="BoardDetailItemContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorFilterTitle</item>
    </style>

    <style name="BoardItemTagText">
        <item name="android:background">@color/colorTagBackground</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#7a7a7a</item>
    </style>

    <style name="FilterTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorFilterTitle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FilterSubTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorFilterSubTitle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FilterSubText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorHungryLightBlack</item>
        <item name="android:layout_marginEnd">7dp</item>
    </style>

    <style name="FilterSpinnerStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textColor">@color/colorHungryBlack</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="FilterLine">
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/colorHungryGray</item>
        <item name="android:layout_marginTop">11dp</item>
    </style>

    <style name="FilterRangeBarValueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorHungryBlack</item>
        <item name="android:maxLength">3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RangeBarStyle">
        <item name="mrb_connectingLineColor">@color/colorHungryRed</item>
        <item name="mrb_pinColor">@color/colorHungryRed</item>
        <item name="mrb_pinMaxFont">13sp</item>
        <item name="mrb_rangeBarColor">@color/colorFilterView</item>
        <item name="mrb_selectorBoundaryColor">@color/colorHungryRed</item>
        <item name="mrb_selectorBoundarySize">2dp</item>
        <item name="mrb_selectorColor">@android:color/white</item>
        <item name="mrb_selectorSize">10dp</item>
        <item name="mrb_tickColor">@color/colorHungryRed</item>
    </style>

    <style name="MyPageUserContentText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorHungryNavy</item>
    </style>

    <style name="MyPageScoreText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorDeskBrown</item>
    </style>

    <style name="MyPageScoreNumberText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorHungryLightBlack</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="MyPageEditContentText">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/tv_mpe_bg</item>
        <item name="android:textColor">@color/colorHungryBlack</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
